<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPurple"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_centerHorizontal="true"
    tools:context=".MyProfile">

    <SearchView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        />

    <ImageButton
        android:id="@+id/menubtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/app_name"
        android:background="@drawable/rep_shuffle_btn"
        android:src="@drawable/menu"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="330dp">

    </ImageButton>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="CONTINUE LISTENING"
        android:textSize="23dp"
        android:textColor="@color/colorDarkBlue"
        android:textStyle="bold"
        android:layout_marginTop="110dp"
        android:layout_gravity="center_horizontal" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="170dp">

        <LinearLayout
            android:id="@+id/asthma_action_plan1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="-90dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/alb1" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="105dp"
                    android:src="@drawable/alb2"
                    />

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="340dp"
                    android:src="@drawable/alb4" />
            </RelativeLayout>
        </LinearLayout>


    </HorizontalScrollView>




    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="POPULAR PODCASTS"
        android:textSize="23dp"
        android:textColor="@color/colorDarkBlue"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="430dp"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="480dp">

        <LinearLayout
            android:id="@+id/asthma_action_plan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent" >
                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/alb8" />
                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="190dp"
                    android:src="@drawable/alb5" />
                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="355dp"
                    android:src="@drawable/alb3" />
            </RelativeLayout>
        </LinearLayout>


    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="21:40"
            android:textSize="16dp"
            android:layout_marginTop="680dp"
            android:layout_marginLeft="12dp">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="68:10"
            android:textSize="16dp"
            android:layout_marginTop="680dp"
            android:layout_marginLeft="350dp">

        </TextView>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="40"
            android:layout_marginTop="700dp"
            />

        <ImageButton
            android:id="@+id/playbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/play_btn_bg"
            android:contentDescription="@string/app_name"
            android:src="@drawable/play"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="730dp"
            app:tint="@color/colorWhite">

        </ImageButton>
        <ImageButton
            android:id="@+id/prevbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/next_prev_btn"
            android:contentDescription="@string/app_name"
            android:src="@drawable/prev"
            android:layout_marginTop="730dp"
            android:layout_marginLeft="100dp"
            app:tint="@color/colorPurple">

        </ImageButton>

        <ImageButton
            android:id="@+id/nextbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/next_prev_btn"
            android:contentDescription="@string/app_name"
            android:src="@drawable/next"
            android:layout_marginTop="730dp"
            android:layout_marginLeft="250dp"
            app:tint="@color/colorPurple">

        </ImageButton>
        <ImageButton
            android:id="@+id/repbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/app_name"
            android:background="@drawable/rep_shuffle_btn"
            android:src="@drawable/repeat"
            android:layout_marginTop="730dp"
            android:layout_marginLeft="20dp">

        </ImageButton>
        <ImageButton
            android:id="@+id/shufflebtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/app_name"
            android:background="@drawable/rep_shuffle_btn"
            android:src="@drawable/shuffle"
            android:layout_marginTop="730dp"
            android:layout_marginLeft="330dp">

        </ImageButton>


    </RelativeLayout>

</FrameLayout>